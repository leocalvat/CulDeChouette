<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".SiroterActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/bet" />

    <ListView
        android:id="@+id/playersListView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/validateBetButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/validate_bet"
        android:enabled="true" />

    <com.example.culdechouette.DiceEditText
        android:id="@+id/diceEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/dice"
        android:visibility="gone" />

    <Button
        android:id="@+id/validateRollButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/validate_roll"
        android:visibility="gone" />

    <TextView
        android:id="@+id/resultText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="4dp"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/contreSiropLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="start"
        android:paddingVertical="8dp"
        android:visibility="gone">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="8dp"
            android:textSize="@dimen/text_size_small"
            android:text="@string/contre_sirop_hint" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="start">

            <Spinner
                android:id="@+id/playerSpinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/contre_sirop_expression" />
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/backButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/back_to_game"
        android:visibility="gone" />
</LinearLayout>
