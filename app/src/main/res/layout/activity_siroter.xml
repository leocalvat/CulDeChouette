<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".SiroterActivity">

    <TextView
        android:id="@+id/siroterTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Siroter"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/siroterMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Faites vos paris :"
        android:textSize="18sp" />

    <ListView
        android:id="@+id/playersListView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/validateBetButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Valider les paris"
        android:enabled="true" />

    <com.example.culdechouette.DiceEditText
        android:id="@+id/diceEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Valeur du dÃ©"
        android:visibility="gone" />

    <Button
        android:id="@+id/validateScoreButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Valider le score"
        android:visibility="gone" />
</LinearLayout>
